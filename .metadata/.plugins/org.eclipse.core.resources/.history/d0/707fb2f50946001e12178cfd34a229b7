<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org/DTD Mapper3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="aaa.service.BoardMapper">
	
	<select id="list" resultType = "bDTO">
		select * from board
	</select>
	
	<select id="detail" resultType = "bDTO" parameterType="Integer">
		select * from board where id = #{id}
	</select>
	
	<insert id="insseerr" parameterType="bDTO">
		insert into board (title, pname, pw, content, upfile, reg_date, cnt, seq, lev)
		values
		(#{title},#{pname},#{pw},#{content},#{upfile}, sysdate(),0,0,0)
	</insert>
	
	<delete id="delettt" parameterType="bDTO">
		delete from board where id = #{id} and pw = #{pw}
	</delete>
	
	<update id="modifffy" parameterType="bDTO">
		update board set 
		pname = #{pname}, content = #{content}, title = #{title}, upfile = #{upfile}
		where id = #{id} and pw = #{pw}
	</update>
	
	<update id="addCount">
		update board set
		cnt = cnt + 1
		where id = #{id}
	</update>
	
	<select id="listWithPaging" parameterType="map" resultType="bDTO">
		select *
		from board
		order by id desc
		limit #{offset}, #{perPage}
	</select>
	
	<select id="getTotalRecordCount" resultType="bDTO">
		select count(*)
		from board
	</select>

</mapper>