package aaa.controll;

import java.util.ArrayList;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;

import aaa.model.BanMain;
import aaa.model.MenuData;
import aaa.model.SeasonMain;
import jakarta.annotation.Resource;

@Controller
@RequestMapping("/ban")
public class BanController {
	
	@Resource
	BanMain bm;
	
	@ModelAttribute("banNav")
	Object headerNav() {
		ArrayList<MenuData>res = new ArrayList<>();
		res.add(new MenuData("ban1", "1반"));
		res.add(new MenuData("ban2", "2반"));
		res.add(new MenuData("ban3", "3반"));
		res.add(new MenuData("ban4", "4반"));
		return res;
	}
	
	@ModelAttribute("mainCt")
	Object mainContent(
			@RequestParam(value = "bb", defaultValue = "spring") String sn) {
		
		return bm.getName(sn);
	}
	
	
	@ModelAttribute("fTxt")
	Object footerTxt() {
		
		return "바닥글입니다.";
	}
	

	@RequestMapping("ban")
	String template() {
		return "ban/template";
	}
}
